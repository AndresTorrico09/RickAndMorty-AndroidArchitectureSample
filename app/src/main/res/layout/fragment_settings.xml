<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:circle="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="App Theme: "
        android:labelFor="@+id/rg_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toEndOf="@+id/tv_theme"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Set dark mode"
            android:text="@string/radio_dark_title" />

        <RadioButton
            android:id="@+id/radio_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Set light mode"
            android:text="@string/radio_light_title" />
    </RadioGroup>


    <TextView
        android:id="@+id/tv_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Brightness: "
        android:labelFor="@+id/sb_brightness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_theme" />

    <SeekBar
        android:id="@+id/sb_brightness"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:contentDescription="Set brightness"
        android:min="0"
        app:layout_constraintStart_toEndOf="@id/tv_brightness"
        app:layout_constraintTop_toBottomOf="@id/rg_theme" />

    <com.example.rickandmorty.utils.customviews.CircleView
        android:id="@+id/my_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        circle:circle_background="@color/colorPrimary"
        circle:circle_radius="100dp"
        circle:onCenter="true" />

</androidx.constraintlayout.widget.ConstraintLayout>